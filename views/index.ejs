<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Management</title>
    <link rel="stylesheet" href="/stylesheets/output.css">
</head >
<body class=" text-white ">
    <div class="main  bg-zinc-900 w-full min-h-screen" >
        <div class="form p-10 ">
            <form action="/create" method="post">
               <input class="bg-zinc-700 block px-5 py-3 m-5 w-full rounded-2xl" type="text" placeholder="Task title" name="title">
                <textarea placeholder="write your task details here" class="bg-zinc-700 block px-5 py-3 resize-none m-5 w-full rounded-2xl" name="details"></textarea>
                <input type="submit" value="Add task" class="bg-blue-600 block m-5 p-2 rounded-2xl outline-none" >
            </form>
        </div>
        <div class="tasks p-10 flex flex-wrap gap-5">
            <%if(files.length > 0){ %>
                <% files.forEach(function(val){ %>
                    <div class="task min-w-72 px-3  py-4 bg-zinc-700 rounded-md" >
                        <h1 class="mb-3 text-2xl tracking-tighter"><%= val %></h1>
                        <div class="flex justify-between m-3" >
                            <a href="/files/<%=val%>" class="text-blue-500">Read More</a>
                            <a href="/edit/<%=val%>" class="text-gray-500">Edit Filename</a>
                        </div>
                      
                    </div>
                <%})%>
           <%}else{ %>
            <h3 class="text-zinc-700">No Task yet ......</h3>
           <% } %>

        </div>
    </div>
<script src="/javascripts/script.js"></script>
</body>
</html>